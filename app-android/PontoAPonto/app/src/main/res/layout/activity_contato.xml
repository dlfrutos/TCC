<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Contato">

    <TextView
            android:text="CONTATO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView50" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" android:textSize="24sp" android:textStyle="bold" android:padding="12dp"
            android:background="#1b5e20" android:textColor="@color/backgroundcolor"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView51"
            app:layout_constraintTop_toBottomOf="@+id/textView50" app:layout_constraintStart_toStartOf="parent"
            android:text="Verifique as formas de entrar em contato para deixar seu comentário, reclamação, sugestão e outras."
            android:textSize="14sp" app:autoSizeTextType="uniform" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            android:textStyle="bold"/>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" app:cardCornerRadius="16dp"
            android:id="@+id/cardView13"
            android:padding="12dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView51">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="4dp">

            <ImageView
                    android:src="@drawable/ic_email"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/imageView24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1" android:padding="8dp"/>
            <TextView
                    android:text="E-MAIL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView52" app:layout_constraintStart_toEndOf="@+id/imageView24"
                    android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textStyle="bold"/>
            <TextView
                    android:text="Se preferir para enviar um email para dlfrutos@hotmail.com"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView53" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView24" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView52" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" app:cardCornerRadius="16dp"
            android:id="@+id/cardView12" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView13" android:padding="12dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="4dp">

            <ImageView
                    android:src="@drawable/ic_gplay"
                    android:layout_width="0dp"
                    android:layout_height="0dp" android:id="@+id/imageView25"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp" android:layout_marginTop="8dp"
                    app:layout_constraintDimensionRatio="1:1"/>
            <TextView
                    android:text="GOOGLE PLAY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView54" android:layout_marginStart="24dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView25" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textStyle="bold"/>
            <TextView
                    android:text="Clique aqui para visitar o site do app Ponto-A-Ponto e deixar seu comentário."
                    android:layout_height="wrap_content"
                    android:id="@+id/textView55"
                    app:layout_constraintTop_toBottomOf="@+id/textView54"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView54"
                    app:layout_constraintEnd_toEndOf="@+id/textView54" android:layout_width="0dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/cardView12"
            android:id="@+id/cardView15">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="4dp">

            <ImageView
                    android:src="@drawable/ic_github"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/imageView26"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintDimensionRatio="1:1" android:padding="8dp"/>
            <TextView
                    android:text="GITHUB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView56" android:textStyle="bold" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView26" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="Visite o site GitHub do projeto para ter acesso ao código fonte: www.github.com/dlfrutos/tcc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView57"
                    app:layout_constraintTop_toBottomOf="@+id/textView56"
                    android:layout_marginBottom="6dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/textView56"
                    app:layout_constraintStart_toStartOf="@+id/textView56" app:autoSizeTextType="uniform"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="91dp" android:id="@+id/guideline"/>
</android.support.constraint.ConstraintLayout>