<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.ListaPontoMaisProximoActivity"
>

    <TextView
            android:id="@+id/txt_buscapontos_latitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_buscaponto_distancia"
            app:layout_constraintTop_toTopOf="@+id/txt_buscaponto_distancia"/>

    <TextView
            android:id="@+id/txt_buscaponto_longitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textAlignment="viewStart"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_buscaponto_distancia"
            app:layout_constraintTop_toBottomOf="@+id/txt_buscapontos_latitude"/>

    <TextView
            android:id="@+id/txt_buscaponto_distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="Suas Coordenadas:"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView14"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_lista_pontos_proximos"
            android:scrollbars="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Pontos mais próximos:"
            android:textAllCaps="true"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_buscaponto_longitude"/>
    <ImageView
            android:layout_width="50dp"
            android:src="@drawable/ic_019_map_11"
            android:layout_height="50dp"
            android:id="@+id/imageView14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:background="#96f4ff81" android:paddingBottom="8dp"/>
    <TextView
            android:text="[1/3] Selecionar o ponto mais próximo desejado..."
            android:layout_height="0dp"
            android:id="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/imageView14" app:layout_constraintStart_toEndOf="@+id/imageView14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imageView14" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" app:autoSizeTextType="uniform" android:background="#96f4ff81"
            android:textStyle="bold"
            android:layout_width="0dp" android:paddingLeft="8dp" android:paddingTop="16dp"/>
</android.support.constraint.ConstraintLayout>