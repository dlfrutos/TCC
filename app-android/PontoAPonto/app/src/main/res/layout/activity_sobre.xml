<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.daniel.pontoaponto.Activities.SobreActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="Aplicativo desenvolvido como parte do TCC do curso de Análise e Desenvolvimento de Sistema do IFSC. "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView38" app:layout_constraintEnd_toEndOf="@+id/textView37"
                    app:layout_constraintStart_toStartOf="@+id/textView37"
                    app:layout_constraintTop_toBottomOf="@+id/textView37"/>
            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp" app:srcCompat="@drawable/coletivo"
                    android:id="@+id/imageView22"
                    app:layout_constraintEnd_toEndOf="@+id/imageView21"
                    app:layout_constraintStart_toStartOf="@+id/imageView21"
                    app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintHorizontal_bias="0.119"
                    app:layout_constraintTop_toTopOf="@+id/textView44"
                    app:layout_constraintBottom_toBottomOf="@+id/textView45" android:padding="4dp"/>
            <ImageView
                    android:layout_width="74dp"
                    android:layout_height="0dp"
                    android:src="@drawable/ic_logo_ifsc2"
                    android:id="@+id/imageView20"
                    app:layout_constraintTop_toTopOf="@+id/textView37" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView38"/>
            <TextView
                    android:text="Coletivo Santa Cruz"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView44" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView22" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold" android:textSize="14sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView43" android:textAllCaps="true"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" app:srcCompat="@drawable/canoinhas"
                    android:id="@+id/imageView21"
                    app:layout_constraintStart_toStartOf="@+id/imageView20"
                    app:layout_constraintEnd_toEndOf="@+id/imageView20"
                    app:layout_constraintBottom_toBottomOf="@+id/textView43"
                    app:layout_constraintTop_toTopOf="@+id/textView42"
                    app:layout_constraintDimensionRatio="h,1:1"/>
            <ImageView
                    android:layout_width="0dp"
                    app:srcCompat="@drawable/flaticon"
                    android:id="@+id/imageView23"
                    android:layout_height="0dp" app:layout_constraintDimensionRatio="h,1:1"
                    app:layout_constraintEnd_toEndOf="@+id/imageView20"
                    app:layout_constraintStart_toStartOf="@+id/imageView20"
                    android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView22"
            />
            <TextView
                    android:text="Site de fornecimento de icones, utilizados para elaboração deste app. Não deixe de visitar: www.flaticons.com"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/textView48"
                    app:layout_constraintEnd_toEndOf="@+id/textView47"
                    app:layout_constraintStart_toStartOf="@+id/textView47"
                    app:layout_constraintTop_toBottomOf="@+id/textView47"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView23" app:autoSizeTextType="uniform"/>
            <TextView
                    android:text="Este Aplicativo busca para auxiliar o uso de transporte público de forma gratuita e sem a necessidade de conexão com a web. Desenvolvido com software livre, utilizando Linux Mint LMDE como sistema operativo, Android Studio como SDK de desenvolvimento android, sistema Android utilizado em smartfones e as parcerias abaixo listadas."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView49" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView46" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:textStyle="bold" android:textSize="12sp" app:autoSizeTextType="uniform"/>
            <TextView
                    android:text="A parceira com a Prefeirtura de Canoinhas está voltada para trazer serviços a população com soluções tecnológicas e inovadoras."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView43"
                    app:layout_constraintTop_toBottomOf="@+id/textView42"
                    app:layout_constraintStart_toStartOf="@+id/textView42"
                    app:autoSizeTextType="uniform"
                    android:textSize="14sp" android:textAlignment="viewStart"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="SOBRE O APP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView46" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="24sp" android:textStyle="bold" android:textAlignment="center"
                    android:padding="12dp"
                    android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"/>
            <TextView
                    android:text="A empresa de transporte Coletivo Santa Cruz contribuiu para o desenvolvimento deste aplicativo permitindo estudo de pontos e rotas das linhas de ônibus."
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView45"
                    app:layout_constraintTop_toBottomOf="@+id/textView44"
                    app:layout_constraintStart_toEndOf="@+id/imageView22"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="@+id/textView44"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:text="INSTITUTO FEDERAL DE SANTA CATARINA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView20" android:layout_marginStart="8dp"
                    android:textStyle="bold" android:textSize="14sp"
                    android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView49"/>
            <TextView
                    android:text="FLATICON"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView47"
                    app:layout_constraintTop_toTopOf="@+id/imageView23" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView23" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" android:textStyle="bold" android:textSize="14sp"/>
            <TextView
                    android:text="Prefeitura de Canoinhas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView42"
                    android:textStyle="bold" android:textAllCaps="true"
                    android:textAlignment="viewStart" android:textSize="14sp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView38"
                    app:layout_constraintStart_toEndOf="@+id/imageView21"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
